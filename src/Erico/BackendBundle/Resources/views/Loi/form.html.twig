			<div class="form-group">
			
			  <div class="col-md-12">
			  {{ form_label(form_loi.designation, "Titre")}} : 
			  </div>
			  
			  <div class="col-md-12">
			  {{ form_errors(form_loi.designation) }}
			  {{ form_widget(form_loi.designation, {'attr':{'class':'form-control'}}) }}
