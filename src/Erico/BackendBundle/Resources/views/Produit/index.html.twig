{% extends "EricoBackendBundle::liste.html.twig" %}

{% block page %}
	<li>
		Produit
	</li>
	
{% endblock %}
	
{% block toolbar %}
<a href="{{ path('erico_backend_addproduit_page') }}" type="button" class="btn btn-default">
	<i class="glyphicon glyphicon-plus"></i>
</a>

{% endblock %}
						
{% block contentTablehead %}
	<th class="col-xs-1" ><i class="fa fa-picture-o fa-lg" aria-hidden="true"></i></th>
	<th class="col-xs-1" data-field="id" data-sortable="true">ID</th>
	<th class="col-xs-2" data-field="titre" data-sortable="true">Designation</th>
	<th class="col-xs-2" data-field="categorie" data-sortable="true">Catégories</th>
	<th class="col-xs-2" data-field="keyword" data-sortable="true">Mot clé</th>
	<th class="col-xs-1" data-field="view" data-sortable="true">Vue</th>
	<th class="col-xs-1" data-field="publish" data-sortable="true">Publié</th>
	<th class="col-xs-1" data-field="action" > </th>
{% endblock %}

{% block contentTableBody %}

{% for item in produits %}
	<tr>
		<td><img  src="{{ asset(item.imageIntro) }}" class="img-responsive" alt=""></td>
		<td>{{ item.id }}</td>
		<td>{{ item.designation }}</td>
		
		<td>
		{% for cat in item.categories %}
				<a href="#" title="{{cat.chemin}}">{{cat.designation}}</a>, 
		{% endfor %}
		</td>
		
		<td>
		
		</td>
		
		<td> {{ item.nbrVue }} </td>
		<td>
		
		{%  if item.publier == 1 %}
		<input data-no-uniform="true"  checked type="checkbox" class="iphone-toggle" disabled="">Le {{ item.datePublish|date("d M Y H:i") }}
		{%  else %}
		<input data-no-uniform="true" type="checkbox" class="iphone-toggle" disabled="">
		{%  endif  %}
		</td>
		<td class="center">
			<div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
						<a class="" href="{{ path('erico_backend_updateproduit_page', {'id': item.id})}}">
							<i class="glyphicon glyphicon-edit icon-white"></i>
							Modifier
						</a>
					</li>
					 <li class="divider"></li>
					<li>
						<a class="delete-content" href="#" data-designation="{{item.designation|capitalize}}" data-id="{{item.id}}">
						<i class="glyphicon glyphicon-trash icon-white"></i>
						Supprimer
					</a>
					</li>
                </ul>
            </div>
			
			
			
		</td>
	</tr>
{% endfor %}

{% endblock %}

