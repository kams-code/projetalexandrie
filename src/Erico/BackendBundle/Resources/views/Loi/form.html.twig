			  <div class="col-md-12">
			  {{ form_errors(form_loi.num) }}
			  {{ form_widget(form_loi.num, {'attr':{'class':'form-control'}}) }}
			  </div>
			  
			</div>
		</div>
		
		<br/>
		
		<div class="row">
			<div class="form-group">
			
			  <div class="col-md-12">
			  {{ form_label(form_loi.dateLoi, "Date")}} : 
			  </div>
			  
			  <div class="col-md-4">
			  {{ form_errors(form_loi.dateLoi) }}
			  {{ form_widget(form_loi.dateLoi, {'attr':{'class':'form-control', }}) }}
			  </div>
			  
			</div>
		</div>
		
		<br/>
		
		<div class="row">
			<div class="form-group">
			
			  <div class="col-md-12">
			  {{ form_label(form_loi.lieuAdoption, "Lieu d'adoption")}} : 
